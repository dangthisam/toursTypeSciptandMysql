extends ../../layout/default.pug

block main
  h1.mb-4 #{titlePage}

  .card.mb-3
    .card-header Danh sách danh mục
    .card-body
      .row
        .col-8

        .col-4.text-end
          a.btn.btn-outline-success(
            href=`${prefixAdmin}/categories/create`
          ) + Thêm mới

      table.table.table-hover.table-sm.mt-3
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Trạng thái
            th Hành động
        tbody
          each item, index in categories
            tr
              td #{index + 1}
              td
                img(
                  src=item.image, 
                  alt=item.title, 
                  width="100px", 
                  height="auto"
                )
              td #{item.title}
              td
                if item.status === "active"
                  a.badge.bg-success.text-white(href="javascript:;") Hoạt động
                else
                  a.badge.bg-danger.text-white(href="javascript:;") Dừng hoạt động
              td
                a.btn.btn-secondary.btn-sm(
                  href=`${prefixAdmin}/categories/detail/${item.id}`
                ) Chi tiết
                a.btn.btn-warning.btn-sm.ms-1(
                  href=`${prefixAdmin}/categories/edit/${item.id}`
                ) Sửa
                button.btn.btn-danger.btn-sm.ms-1(
                  button-delete-category
                  data-id=item.id
                ) Xóa

extends ../../layout/default.pug
block main
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow-lg.rounded-4.border-0
          .card-header.bg-gradient-primary.text-white.rounded-top-4.text-center.py-4
            h2.mb-1.fw-bold.text-danger 
              i.fas.fa-user-plus.me-2
              | Đăng ký tài khoản
            p.mb-0.fs-6.text-danger Đăng ký để nhận ưu đãi và trải nghiệm mua sắm tốt nhất!
          .card-body.p-4.bg-white
            //- Thông báo lỗi (nếu có)
            if error
              .alert.alert-danger.text-center= error
            form(action="/user/register", method="POST", autocomplete="off")
              .mb-3
                label.form-label(for="fullName") 
                  i.fas.fa-user.me-2.text-primary
                  | Tên đăng nhập
                input.username.form-control.shadow-sm(type="text", name="username", id="fullName", required, placeholder="Nhập tên đăng nhập")
              .mb-3
                label.form-label(for="email")
                  i.fas.fa-envelope.me-2.text-primary
                  | Email
                input.email.form-control.shadow-sm(type="email", name="email", id="email", required, placeholder="Nhập email")
              .mb-3
                label.form-label(for="password")
                  i.fas.fa-lock.me-2.text-primary
                  | Mật khẩu
                input.password.form-control.shadow-sm(type="password", name="password", id="password", required, placeholder="Nhập mật khẩu")
              button.btn.btn-gradient-success.btn-lg.w-100.mt-2(type="submit")
                i.fas.fa-user-plus.me-2
                | Đăng ký
              .mt-3.text-center
                span.text-muted Đã có tài khoản?
                a(href="/login" class="ms-1 text-primary.fw-semibold") Đăng nhập

